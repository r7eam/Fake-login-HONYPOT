# Environment Variables for Honeypot Stack
# Copy this file to .env and configure for your environment

# ============================================================================
# SLACK ALERTS
# ============================================================================
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# ============================================================================
# ENRICHMENT WORKER
# ============================================================================
# Poll interval (seconds) for incremental processing
PROCESS_INTERVAL=15

# Performance tuning
BATCH_SIZE=100
MAX_WORKERS=4
CACHE_MAX_SIZE=10000

# TTL settings (seconds)
GEOIP_TTL=86400     # 24 hours
ASN_TTL=86400       # 24 hours  
RDNS_TTL=3600       # 1 hour

# Timeouts
RDNS_TIMEOUT=2      # 2 seconds
RDNS_ENABLED=true

# Metrics
METRICS_PORT=9090
METRICS_ENABLED=true

# ============================================================================
# ALERT THRESHOLDS
# ============================================================================
ALERT_WINDOW_MINUTES=10
BRUTE_FORCE_THRESHOLD=10

# ============================================================================
# OPTIONAL: Threat Intelligence APIs
# ============================================================================
# AbuseIPDB (https://www.abuseipdb.com/api)
# ABUSEIPDB_API_KEY=

# VirusTotal (https://www.virustotal.com/gui/my-apikey)
# VIRUSTOTAL_API_KEY=

# GreyNoise (https://www.greynoise.io/)
# GREYNOISE_API_KEY=
